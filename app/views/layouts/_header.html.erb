<header class="navbar navbar-transparent navbar-fixed-top">
	<nav>
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
					<span class="icon-bar">1</span>
					<span class="icon-bar">2</span>
					<span class="icon-bar">3</span>
				</button>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<%= link_to "Wild", root_path , id: "logo" %>
				<ul class="nav navbar-nav navbar-right">
					<% if logged_in? %>
									<li class="dropdown">
										<a href="#" class="dropdown-toggle" data-toggle="dropdown">
											Account <b class="caret"></b>
										</a>
										<ul class="dropdown-menu">
											<li><%= link_to "Profile", current_user %></li>
											<li><%= link_to "Settings", edit_user_path(current_user) %></li>
											<li class="divider"></li>
											<li>
												<%= link_to "Log out", logout_path, method: "delete" %>
											</li>
										</ul>
									</li>
									<li><%= form_tag(posts_path, :method => "get", id: "search-form") do %>
										<%= text_field_tag :search, params[:search], placeholder: "Search" %>
											    <i class="fa fa-search" aria-hidden="true"></i>
										<% end %>
									</li>
								<% else %>
									<li><%= link_to 'Sign Up', new_user_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal'}   %></li>
									<li><%= link_to 'Log In', login_path, {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal1'} %></li>
								<% end %>
							</ul>
						</div>
					</div>
				</nav>
		</header>
