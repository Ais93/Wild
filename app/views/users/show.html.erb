<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <% if current_user?(@user) %>
      <%= link_to "Settings", edit_user_path(current_user) %>
      <%= link_to "New Post", new_post_path %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>