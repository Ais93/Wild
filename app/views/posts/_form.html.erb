<%= simple_form_for @post, html: {multipart: true} do |f| %>
  <%= f.input :name, label: 'Name a Place or Activity', error: 'Name required' %>
  <%= f.input :description, label: 'Describe it', error: 'Description required' %>
  <%= f.input :other, label: 'Any Tips or Advice?' %>
  <%= f.label :'A picture is worth a 1000 words' %>
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  <%= f.label :'Finally' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category" }, input_html: { class: "dropdown-toggle" } %>
  <%= f.collection_select :location_id, Location.all, :id, :name, {prompt: "Choose a county" }, input_html: { class: "dropdown-toggle" } %>
  </br>
  <%= f.button :submit %>
<% end %>

