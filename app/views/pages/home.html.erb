<div class="row full-height featured-container">
    <div class="col-sm-10 col-xs-12">
        <h2 class="heading">Have a Look at Some of Our Featured Posts</h2>
        <% Post.all.sample(4).each do |p| %>
          <div class="img-post col-md-3 col-sm-3 col-xs-4">
            <%= link_to image_tag(p.picture.url, :class => "img_preview"), post_path(p) %>
            <div class="hidden-info">
              <span class="title"><%= link_to p.name, post_path(p) %>, <%= p.location.name %></span>
              <span class="info"><%= p.user.name %></span>
            </div>
          </div>
        <% end %>
    </div>
</div>

